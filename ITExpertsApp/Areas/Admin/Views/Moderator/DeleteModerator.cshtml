@model ITExpertsApp.Models.ViewModels.ModeratorVM

@{
    ViewBag.Title = "DeleteModerator";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            First Name:
        </dt>

        <dd>
            @Model.FirstName
        </dd>

        <dt>
            Last Name:
        </dt>

        <dd>
            @Model.LastName
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Model.Email
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.UserId" />
        <div class="row">
            <div class="form-group">
                <label class="col-md-2 control-label" for="Reason">Reason for deletion?</label>
                <div class="col-md-10">
                    <textarea class="form-control" id="Reason" name="Reason" rows="6" cols="20"></textarea>
                </div>
            </div>
        </div>
        <div class="form-actions no-color">
            <input type="submit" value="Delete moderator" class="btn btn-default" /> |
            @Html.ActionLink("Back to Moderator List", "Index")
        </div>
    }
</div>
