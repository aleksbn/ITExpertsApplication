@model ITExpertsApp.Models.ViewModels.CompanyVM

@{
    ViewBag.Title = Model.CompanyName;
}

<h2>Public Company Profile</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name:
        </dt>

        <dd>
            @Model.CompanyName
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            <a href="mailto:@(Model.Email)">@Model.Email</a>
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Model.Description
        </dd>

        @if (User.IsInRole("User"))
        {
            <dt>
                Ask for a job
            </dt>

            <dd>
                <a href="/company/requestjob?id=@Model.CompanyId">Ask</a>
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "CompanyList")
</p>
